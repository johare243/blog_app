<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
  <div class="ui top segment">
    <div class="item">
      <img class="ui centered rounged image" src="<%= blog.image %>"></div>
    </div>
    <div class="content">
		  <span> <%= blog.created.toString() %></span>
    </div>
    <div class="description">
		  <p><%= blog.body %></p>
    </div>
     <a href="/blogs/<%= blog._id %>/edit" type="submit" class="ui orange basic button">Edit</a>
    <form style="display: inline" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
      <button type="submit" class="ui red basic button">Delete</button>
    </form>
  </div>
  </div>
</div>

<% include partials/footer %>

